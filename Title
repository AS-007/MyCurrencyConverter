  }
   if (document.addEventListener) document.addEventListener("DOMContentLoaded", autorun, false);
   else if (document.attachEvent) document.attachEvent("onreadystatechange", autorun);
   else window.onload = autorun;
   
   if (currency == "ZAR") {
        x =Control document.getElementById("zar").value * 12;
        document.getElementById("usd").value = Math.round(x);

//usd to zar
    else if (currency == "USD") {
        x =Control document.getElementById("usd").value / 12;
        document.getElementById("zar").value = Math.round(x);

//zar to gbp
else if (currency == "ZAR") {
        x =Control document.getElementById("zar").value * 16;
        document.getElementById("gbp").value = Math.round(x);

//gbp to zar
